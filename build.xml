<project name="ece454750s15a1" default="compile" basedir=".">

  <description>ECE454 A1</description>

  <property name="src" location="src" />
  <property name="gen" location="gen-java" />
  <property name="build" location="build" />

  <path id="libs.classpath">
    <fileset dir="./jars">
      <include name="*.jar" />
    </fileset>
    <!-- TODO: unify location for jar files during link -->
    <fileset dir="./jars">
      <include name="*.jar" />
    </fileset>
  </path>
  <path id="build.classpath">
    <path refid="libs.classpath" />
    <pathelement path="${gen}" />
  </path>

    <path id="main.classpath">
    <path refid="build.classpath" />
    <pathelement path="${build}" />
    <pathelement path="main.jar" />
  </path>

  <target name="init">
    <tstamp />
    <mkdir dir="${build}"/>
    <mkdir dir="${build}/log"/>
    <mkdir dir="${build}/lib"/>
  </target>

  <target name="compile" depends="init, generate">
    <javac source="1.6" target="1.6" srcdir="${gen}" destdir="${build}" classpathref="libs.classpath" />
    <javac source="1.6" target="1.6" srcdir="${src}" destdir="${build}" classpathref="build.classpath" />
  </target>

  <target name="main" description="execute the program" depends="compile" >
    <jar jarfile="main.jar" basedir="${build}"/>
  </target>


  <target name="be" description="Run a backend server" >
    <echo>backend client simple:</echo>
    <java classname="BEServer" classpathref="main.classpath" failonerror="true" output="${build}/log/BEServer.log">
      <arg line="-host ecelinux1 -pport 18726 -mport 28726 -ncores 2 -seeds ecelinux1:38726,ecelinux2:38726"/>
    </java>
  </target>

  <target name="fe" description="Run a frontend server" >
    <echo>frontend client simple:</echo>
    <java classname="FEServer" classpathref="main.classpath" failonerror="true"  output="${build}/log/FEServer.log">
      <arg line="-host ecelinux1 -pport 18726 -mport 28726 -ncores 2 -seeds ecelinux1:38726,ecelinux2:38726"/>
    </java>
  </target>

  <target name="client" description="Run a test client" depends="compile, main" >
    <echo>Test client process:</echo>
    <java classname="A1Client" classpathref="main.classpath" failonerror="true">
        <arg line="-host ecelinux1 -pport 18726 -mport 28726 -ncores 2 -seeds ecelinux1:38726,ecelinux2:38726"/>
    </java>
  </target>

  <target name="generate">
    <!-- Generate the thrift gen-java source -->
    <!-- exec executable="../../compiler/cpp/thrift" failonerror="true" -->
    <exec executable="thrift" failonerror="true" >
      <arg line="--gen java -r A1Management.thrift"/>
    </exec>
    <exec executable="thrift" failonerror="true" >
      <arg line="--gen java -r A1Password.thrift"/>
    </exec>

  </target>

  <target name="clean">
    <delete dir="${build}" />
    <delete dir="${gen}"/>
    <delete file="main.jar" />
  </target>

</project>
