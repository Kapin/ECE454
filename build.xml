<project name="ece454750s15a1" default="main" basedir=".">

  <description>ECE454 A1</description>

  <property name="src" location="src" />
  <property name="gen" location="gen-java" />
  <property name="build" location="build" />

  <path id="libs.classpath">
    <fileset dir="./jars">
      <include name="*.jar" />
    </fileset>
    <!-- TODO: unify location for jar files during link -->
    <fileset dir="./jars">
      <include name="*.jar" />
    </fileset>
  </path>
  <path id="build.classpath">
    <path refid="libs.classpath" />
    <pathelement path="${gen}" />
  </path>

    <path id="main.classpath">
    <path refid="build.classpath" />
    <pathelement path="${build}" />
    <pathelement path="main.jar" />
  </path>

  <target name="init">
    <tstamp />
    <mkdir dir="${build}"/>
    <mkdir dir="${build}/log"/>
    <mkdir dir="${build}/lib"/>
  </target>

  <target name="compile" depends="init, generate">
    <javac source="1.6" target="1.6" srcdir="${gen}" destdir="${build}" classpathref="libs.classpath" />
    <javac source="1.6" target="1.6" srcdir="${src}" destdir="${build}" classpathref="build.classpath" />
  </target>

  <target name="main" description="execute the program" depends="compile" >
    <jar jarfile="main.jar" basedir="${build}"/>
    <parallel>
      <java classname="BEServer" fork="true" timeout="10000"
        classpathref="main.classpath" failonerror="false" output="${build}/log/BEServer.log">
        <arg line="-host localhost -pport 18726 -mport 28726 -ncores 1 -seeds localhost:18726,localhost:28726"/>
      </java>
      <sequential>
        <sleep seconds="2"/>
        <echo>frontend client:</echo>
        <java classname="FEServer"
          classpathref="main.classpath" failonerror="true">
          <arg line="-host localhost -pport 18726 -mport 28726 -ncores 1 -seeds localhost:18726,localhost:28726"/>
      </java>
      </sequential>
    </parallel>
  </target>


  <target name="backendserver" description="Run a backend server" depends="compile" >
    <echo>backend client simple:</echo>
    <java classname="BEServer"
      classpathref="main.classpath" failonerror="true">
      <arg line="-host localhost -pport 18726 -mport 28726 -ncores 1 -seeds localhost:18726,localhost:28726"/>
    </java>
  </target>

  <target name="frontendserver" description="Run a backend server" depends="compile" >
    <echo>frontend client simple:</echo>
    <java classname="FEServer"
      classpathref="main.classpath" failonerror="true">
      <arg line="-host localhost -pport 18726 -mport 28726 -ncores 1 -seeds localhost:18726,localhost:28726"/>
    </java>
  </target>

  <target name="generate">
    <!-- Generate the thrift gen-java source -->
    <!-- exec executable="../../compiler/cpp/thrift" failonerror="true" -->
    <exec executable="thrift" failonerror="true" >
      <arg line="--gen java -r A1Management.thrift"/>
    </exec>
    <exec executable="thrift" failonerror="true" >
      <arg line="--gen java -r A1Password.thrift"/>
    </exec>

  </target>

  <target name="clean">
    <delete dir="${build}" />
    <delete dir="${gen}"/>
    <delete file="main.jar" />
  </target>

</project>
